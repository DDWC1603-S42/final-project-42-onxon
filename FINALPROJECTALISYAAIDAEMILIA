#include <iostream>
using namespace std;

int main()
{
	char clth, clor, sze, a, b, c;
	
	cout<<endl<<" Let's start ordering ! [Y - Yes/N - No]";
	cin>> clth;
	
	if (clth=='Y'){
	cout<<"_________________________________________________"<<endl;
	cout<<endl<<"                    CLOTHES                      "<<endl;
	cout<<"           A - Evening Dress             "<<endl;
	cout<<"           B - Smart Casual              "<<endl;
	cout<<"           C - Sleeveless Shirts         "<<endl;
	cout<<"_________________________________________________"<<endl;
	cout<<"           Which one do you want to buy ?        "<<endl;
	cin>> clth;
	if ((clth !='A')&&(clth !='B')&&(clth !='C')){
		cout<<" Sorry. We don't sell those item"<<endl;
	}
	else {
		cout<<" Nice choice !"<<endl;
	}
}
	else if (clth=='N'){
		cout<<"	Thank You ! Please come again."<<endl;
	}
	else {
		cout<<" Please put a valid answer."<<endl;
	}
	
	cout<<endl<<" Would you like to choose colour ? [Y - Yes/N - No]"<<endl;
	cin >>clor;
	
	if (clor=='Y'){
		cout<<"________________________________________________"<<endl;
		cout<<"                   Colours                   "<<endl;
		cout<<"                 Y - Yellow                  "<<endl;
		cout<<"                 R - Red                     "<<endl;
		cout<<"                 B - Blue                    "<<endl;
		cout<<"________________________________________________"<<endl;
		cout<<"          Which one would you choose ?       "<<endl;
		cin>>clor;
		if((clor != 'Y')&&(clor != 'R')&&(clor != 'B')){
			cout<<" Sorry. We don't sell those colours."<<endl;
		}
		else {
			cout<<"Nice colour !"<<endl;
		}
	}
	else if (clor== 'N'){
		cout<<" Will give you a random colours then."<<endl;
	}
	else {
		cout<<" Sorry. You entered the wrong colour."<<endl;
	}
	
	cout<<endl<<" May we have your size ? [Y - Yes/N- No]"<<endl;
	cin>> sze;
	
	if (sze=='Y') {
		cout<<"________________________________________________"<<endl;
		cout<<"                    Size                      "<<endl;
		cout<<"                  S - Small                   "<<endl;
		cout<<"                  M - Medium                  "<<endl;
		cout<<"                  L - Large                   "<<endl;
		cout<<"________________________________________________"<<endl;
		cout<<"           What size would you have ?         "<<endl;
		cin>>sze;
		if((sze != 'S')&&(sze != 'M')&&(sze != 'L')){
			cout<<" Sorry. We're out of that size."<<endl;
		}
	}
	else if (sze=='N'){
		cout<<" We'll just give you size M - Medium."<<endl;
	}
	else {
		cout<<" Sorry. We don't have that size."<<endl;
	}
	
	cout<<endl<<endl<<" Thank you for shopping with us !"<<endl;
}
